// Place your settings in this file to overwrite the default settings
{
    // Configure the update channel to receive updates from. Requires a restart after change.
    // "stable" or "insiders" or "none"
	"update.channel": "insiders",
    
    //-------- Editor configuration --------
    
    // Controls the font family.
	"editor.fontFamily": "DejaVu Sans Mono",

	// Controls the font size.
	// "editor.fontSize": 16,
    
    // Enables font ligatures
	"editor.fontLigatures": true,
    
    // Controls whether the editor should render whitespace characters
	"editor.renderWhitespace": true,
    
    // Controls visibility of the glyph margin
	"editor.glyphMargin": true,
    
    // Optional. The name or path of the coding standard to use. Defaults to the one set in phpcs global config.
	"phpcs.standard": "PSR2",
    
    //-------- Git Hub Issues --------

	// Your personal access token. See 'https://github.com/settings/tokens'
	"GitHubIssues.authToken": "",
    
    // Display the Issues track icons on the left or right of the status bar
	"GitHubIssues.statusPos": "left",
    
    // Run every n minutes. Minimum is 3 minutes if no authToken supplied.
	"GitHubIssues.runEvery": 1,
    
    //-------- final newline configuration --------

	// Control whether a new line is inserted at the end of the file.
	"files.insertFinalNewline": true
}
